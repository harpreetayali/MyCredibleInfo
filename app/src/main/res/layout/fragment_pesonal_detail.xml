<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="45dp"
        android:text="Mobile: "
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_alignLeft="@+id/textView4"
        android:layout_marginTop="94dp"
        android:text="Skills: "
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView4"
        android:layout_marginTop="143dp"
        android:text="Links: "
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_alignLeft="@+id/textView4"
        android:layout_marginTop="192dp"
        android:text="Location: "
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/per_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/per_skills"
        android:layout_alignTop="@+id/textView4"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/per_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/per_location"
        android:layout_alignTop="@+id/textView5"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/per_links"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/per_skills"
        android:layout_alignTop="@+id/textView6"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/per_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginRight="79dp"
        android:text="TextView"
        android:textSize="20sp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingPersonalEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="30dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/colorBlue"
        app:srcCompat="@android:drawable/ic_menu_edit" />




</RelativeLayout>